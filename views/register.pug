extends layout

block content
  h2.pb-2.mt-4.mb-2.border-bottom Register
  p Please register using this form
  if errors
    each err, i in errors
      div.alert.alert-danger #{err.msg}
  form(action="/users/register", method="post", enctype="multipart/form-data")
    .form-group
      label Name
      input.form-control(name='name', type='text', placeholder='Enter Name', value=form ? form.name : '')
    .form-group
      label Email
      input.form-control(name='email', type='email', placeholder='Enter Email', value=form ? form.email : '')
    .form-group
      label Username
      input.form-control(name='username', type='text', placeholder='Enter Username', value=form ? form.username : '')
    .form-group
      label Password
      input.form-control(name='password', type='password', placeholder='Enter Password')
    .form-group
      label Confirm Password
      input.form-control(name='password2', type='password', placeholder='Confirm Password')
    .form-group
      label Profile Image
      input.form-control-file(name='profileimage', type='file')
    input.btn.btn-primary(type='submit', name='submit', value='Register')